# Environment Configuration
environment  = "dev"
project_name = "my-docs"
aws_region   = "ap-northeast-1"

# S3 Bucket
bucket_name = "dev-my-docs-static"

# Domain Configuration
domain_name    = "docs.example.com"
hosted_zone_id = "Z1234567890ABC"

# Authentication Configuration
# Options: "none", "basic", "cognito", "ip"
authentication_type = "none"

# Basic Authentication (required if authentication_type = "basic")
basic_auth_username = "admin"
basic_auth_password = "changeme"

# IP-based Access Control (required if authentication_type = "ip")
allowed_ip_ranges = [
  "203.0.113.0/24",  # Example office IP range
  "198.51.100.0/24"  # Example VPN IP range
]

# Cognito Authentication (required if authentication_type = "cognito")
cognito_user_pool_name = "dev-docs-users"
cognito_callback_urls = [
  "https://docs.example.com/oauth2/callback"
]
cognito_logout_urls = [
  "https://docs.example.com"
]

# GitHub OIDC Configuration
github_repository = "your-org/your-repo"
github_branch     = "main"

# Tags
tags = {
  Environment = "dev"
  Project     = "My Documentation"
  ManagedBy   = "Terraform"
}
